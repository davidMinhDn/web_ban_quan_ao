@using Slot10.Models;
<html>
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.5/dist/umd/popper.min.js" integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-kjU+l4N0Yf4ZOJErLsIcvOU2qSb74wXpOhqTvwVx3OElZRweTnQ6d31fXEoRD1Jy" crossorigin="anonymous"></script>

</head>
<body>



    <div style="width:100%; ">
        @if (ViewBag.id == null)
        {
            <div style="display:flex; height:5%; width:100%;background-color:black;">
                <div style="text-align:left;width:50%; padding-left:10px;">
                    <p style="color:white !important; "> Hotline: 033231312</p>
                </div>
                <div style="text-align:right;width:50%;padding-left:10px;">
                    <a href="/Home/FormLogin" style="color:white !important;padding-right:10px;"> Đăng Nhập</a>
                </div>
            </div>
            <div style="width:100%;height: 15%;  border-bottom:1px solid; display:flex;justify-content:center;align-items:center;">
                <p style="color:orangered; font:bold; font-size:30px;text-align:center;margin : 0 !important;">Shop Quần Áo Cao Cấp</p>

            </div>


        }

        else
        {
            <div style="display:flex; height:5%; width:100%;background-color:black;">
                <div style="text-align:left;width:50%; padding-left:10px;">
                    <p style="color:white !important; "> Hotline: 033231312</p>
                </div>
                <div style="text-align:right;width:50%;padding-left:10px;">
                    <a href="/Home/Thoat" style="color:white !important;padding-right:10px;"> Thoát</a>
                </div>
            </div>
            <div style="width:100%;height: 15%;  border-bottom:1px solid; display:flex;justify-content:center;align-items:center;">
                <p style="color:yellow; font:bold; font-size:30px;text-align:center;margin : 0 !important;">Shop Quần Áo Cao Cấp</p>

            </div>


            <div style="display:flex; width:100%; background-color:antiquewhite;height:5%;">
                @if (ViewBag.role == "1")
                { @* danh cho nguoi quan ly*@
                    <div style="width:15%;margin-left:10px;">
                        <a href="/Home/QuanLy">Quản Lý Sản Phẩm</a>
                    </div>
                    <div>
                        <a href="/Home/DanhsachDMH">Đơn Mua Hàng</a>
                    </div>


                }
                else
                {
                    @*danh nguoi mua hang*@
                    <div>
                        <a href="/Home/XemGH">Xem Giỏ Hàng(@ViewBag.slsp)</a>
                    </div>

                }

            </div>
            <form action="/Home/Search" method="post" style="margin:20px;">
                <div style="margin-left:20px;">
                    Ten san pham:  <input class="form-control me-2" type="search" name="kq" placeholder="Search">
                </div>

                <div style="margin-left:20px;">
                    Loại sản phẩm: <select class="form-select" name="brand">
                        <option value="0">Tất cả</option>
                        @foreach (Brand item in ViewBag.lsp)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }

                    </select>
                </div>
                <button type="submit" style="background-color:yellow; margin-left:20px; margin-top:10px; border-radius:5px;"> Tìm kiếm</button>
            </form>


        }

    </div>





    <div class="row row-cols-1 row-cols-md-3 g-4" style=" margin-top:100px; margin-bottom:100px;">

        @foreach (SanPham item in ViewBag.list)
        {
            <div class="col-3" style="display:flex; justify-content:center; box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px; ">
                <div>
                    <img src="@item.Image" class="card-img-top" alt="..." style="height:350px;width:350px;">
                    <div class="card-body">
                        <h4 class="card-title">@item.Tensp</h4>
                        <p class="card-text"> Gia tien : @item.Gia - So luong : @item.SoLuong</p>


                        @if (ViewBag.id != null)
                        {
                            if (ViewBag.role == "2")
                            {
                                <a href="/Home/AddSp?id=@item.Id" class="btn btn-primary">Add cart</a>
                            }
                        }

                    </div>
                </div>



            </div>
        }

    </div>
</body>
</html>