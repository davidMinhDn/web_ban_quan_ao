    </head>
    <body style="background-color:#00ebd0;">
<a href="/Home/DanhsachDMH">Quay lại</a>

        <p style="text-align:center; color:red;font-size:25px;">Chi tiết đơn mua hàng</p>
        <table border=1  class="table table-success table-striped" >

            <tr>
                <td>ID sản phẩm</td>
                <td>Tên sản phẩm</td>
                <td>Hình ảnh</td>
                <td>Giá tiền</td>
                <td>Loại sản phẩm</td>
                <td>Số lượng</td>
            </tr>
        @foreach(ChiTietDh item in ViewBag.list)
        {
            <tr>
                <td>@item.SanphamNavigation.Id</td>
                <td>@item.SanphamNavigation.Tensp</td>
                <td > <img src="@item.SanphamNavigation.Image" style=" height:200px; width:200px;"/></td>
                <td>@item.SanphamNavigation.Gia</td>
                @using(var co= new WebShopContext())
                {
                    Brand b = co.Brands.Where(x => x.Id == item.SanphamNavigation.Brand).SingleOrDefault();
                    <td>@b.Name</td>
                }
               <td>@item.Soluong</td>
              
            </tr>
        }
        </table>
    </body>
</html>